@page "/pricing"

@inherits PricingBase;

@using System.Reflection;
@using Models.DTO.Config;

@if (packages == null)
{
    <img src="/Image/Spinner 01.gif" style="display: block; margin: auto; padding: 90px; width: 20%;" />
}
else
{

    @*https://startbootstrap.com/snippets/pricing-table/*@

    <style>
        @@import "compass/css3";

        @@import "compass/css3";
        @@import url(https://fonts.googleapis.com/css?family=Lato:400,700,900);

        .container {
            margin: 0 auto;
            width: 90%;
            max-width: 1200px;
            display: inline-flex;
        }

        .group:after {
            content: "";
            /*display: table;*/
            clear: both;
        }

        .grid-1-5 {
            border: 2px solid #5d4e65;
            min-height: 400px;
            padding: 1.25em;
            position: relative;
            text-align: center;
            transition: all .2s ease-in-out;
            max-width: 300px;
        }

            .grid-1-5:hover {
                background-color: rgb(83,69,91);
                border-top: 2px solid #ec7a37;
                border-bottom: 2px solid #ff4f69;
                box-shadow: 0px 0px 10px 0px rgba(50, 50, 50, 1);
                transform: scale(1.025);
                z-index: 2;
            }

        h2, h3, p, ul {
            margin: 0
        }

        h2 {
            font-size: 1em;
            font-weight: 400;
            margin: 0 0 0.5em;
        }

        h3 {
            font-size: 1.5em;
            letter-spacing: 0.0625em;
            margin: 0 0 0.3333333333333333em;
        }

        p {
            font-size: 0.875em;
            margin: 0 0 1.5em;
        }

        .costTable {
            width: inherit;
        }

        .costRow {
            display: inline;
            vertical-align: middle;
        }
        .costCell {
            
        }

        .pricebutton {
            background-color: #9c83aa;
            border-radius: 20px;
            color: #fff;
            font-size: 1em;
            font-weight: 700;
            padding: 0.75em 1.5em;
            position: absolute;
            bottom: 1.25em;
            left: 50%;
            margin-left: -60px;
            text-decoration: none;
            width: 120px;
        }

            .pricebutton:hover {
                background-color: blueviolet;
            }

        .trialbutton {
            background-color: #fff;
            border-radius: 20px;
            color: #9c83aa;
            font-size: 1em;
            font-weight: 700;
            padding: 0.75em 1.5em;
            position: absolute;
            bottom: 1.25em;
            left: 50%;
            margin-left: -60px;
            text-decoration: none;
            width: 120px;
        }

            .trialbutton:hover {
                background-color: blueviolet;
            }

        .uppercase, .button, h2 {
            text-transform: uppercase;
        }

        sup, .small {
            font-size: 0.6125em;
        }

        .packageRow {
            font-size: smaller;
        }

        .packageItem {
            text-align: left;
            width: auto;
        }

        .packageRow:hover {
            background-color: cadetblue;
        }

    </style>
    @foreach (PurchasePackage p in packages)
    {
        <div class="container group">
            <div class="grid-1-5">
                <h2>@p.Name</h2>
                <table class="costTable">
                    <tbody>
                        <tr class="costRow">
                            <td class="costCell">
                                <h3><sup>£</sup>@p.Cost</h3>
                            </td>
                            <td class="costCell">
                                <p>per user</p>
                                <p>per month</p>
                            </td>
                        </tr>
                    </tbody>
                </table>
                <table class="packageDetails">
                    <tbody>
                        @foreach (PropertyInfo pi in typeof(PurchasePackage).GetProperties().ToList())
                        {
                            if (pi.Name != "Cost" && pi.Name != "Name")
                            {
                                <tr class="packageRow">
                                    <td class="packageItem">@pi.Name.Replace("_", " ")</td>
                                    <td class="packageItem" style="text-align: right">@pi.GetValue(p)</td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
                <div class="row">
                    <div class="column">
                        <button href="" class="pricebutton">Buy</button>
                    </div>
                    <div class="column">
                        <button href="" class="trialbutton">Start Trial</button>
                    </div>
                </div>
            </div>
        </div>
        }
    }