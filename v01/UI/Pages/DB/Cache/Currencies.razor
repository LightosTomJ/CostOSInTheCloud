@page "/currencies"
@inherits CurrenciesBase

@using Models.DB.Cache

<h3>Currencies</h3>

@if (currencies == null)
{
    <img src="/Image/Spinner 01.gif" style="display: block; margin: auto; padding: 90px; width: 20%;" />
}
else
{

    <table class="table">
        <thead>
            <tr>
                <th>Country</th>
                <th>Code</th>
                <th>Currency</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var currency in currencies)
            {
                <tr>
                    <td>@currency.Country.Name</td>
                    <td>@currency.AlphabeticCode</td>
                    <td>@currency.Name</td>
                </tr>
            }
        </tbody>
    </table>
}

@code {}
